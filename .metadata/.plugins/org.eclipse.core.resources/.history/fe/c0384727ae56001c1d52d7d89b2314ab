package application;

import java.util.Scanner;

import entities.NewAccount;

public class Program {

	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);

		System.out.println("Informe o nome do titular: ");
		String name = scanner.next();
		System.out.println("Informe o numéro que deseja para a conta: ");
		int conta = scanner.nextInt();
		System.out.println("Informe o valor do depósito: ");
		double deposito = scanner.nextDouble();

		NewAccount novaConta = new NewAccount(name, conta, deposito);
		System.out.println(novaConta.toString(novaConta.getName(), novaConta.getConta(), novaConta.getDeposito()));

		System.out.println("Gostaria de sacar ou depositar algum valor? S/N");
		char escolha = scanner.next().charAt(0);
		String sacar = " ";
		double valorSaque = 0;
	
	//escolha.getClass().getName();
	if ( escolha == 's' ) {
			System.out.println(" 'S' para Sacar e 'D' para deposito  ");
			char escolha = scanner.next().charAt(0);
			if (escolha == 's') {
				
				System.out.println(" Valor: ");
				valorSaque = scanner.nextDouble();
				System.out.println(novaConta.getDeposito());
			}

		} else System.out.println("pqp");

			scanner.close();

	}
}
