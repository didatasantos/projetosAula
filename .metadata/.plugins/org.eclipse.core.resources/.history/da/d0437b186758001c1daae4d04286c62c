package app;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import entidades.Emprego;

public class Program {

	public static void main(String[] args) {

		List<Emprego> list = new ArrayList<>();

		Scanner sc = new Scanner(System.in);
		System.out.println("quantidade de funcionários: ");
		int n = sc.nextInt();

		for (int i = 0; i < n; i++) {

			System.out.println("Id do funcionário: ");
			int id = sc.nextInt();
//			
//			while (i <= 2) {
//				System.out.println("tente novamente");
//				System.out.println("Id do funcionário: ");
//				id = sc.nextInt();
//			}
			System.out.println("Nome do funcionário: ");
			String name = sc.next();
			System.out.println("Salário inicial do funcionário: ");
			double salary = sc.nextDouble();

			list.add(new Emprego( name, id, salary));
			
		//	System.out.println(list);

		}
		
		System.out.println("gostaria de alterar o salário de algum funcionário?");
		String name = sc.next();
		int id = sc.nextInt();
		double salary = sc.nextDouble();
		list.set(id, new Emprego(name, id, salary));
		System.out.println(list);
		sc.close();

	}
}
