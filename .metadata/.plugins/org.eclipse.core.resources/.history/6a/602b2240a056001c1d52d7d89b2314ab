package application;

import java.util.Scanner;

import entities.NewAccount;

public class Program {
	
	public static void main(String[]args) {
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Informe o nome do titular: ");
		String name = scanner.next();	
		System.out.println("Informe o numéro que deseja para a conta: ");
		int conta = scanner.nextInt();
		System.out.println("Informe o valor do depósito: ");
		double deposito = scanner.nextDouble();
		
		
		
		NewAccount novaConta = new NewAccount(name, conta, deposito);
		System.out.println(novaConta.toString(novaConta.getName(), novaConta.getConta(), novaConta.getDeposito()) );
		
		scanner.close();
		
	}
}
